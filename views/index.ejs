<% include ../views/partials/header %>

<div class="row">
  <form method="post" action="/todo/add">
    <div class="form-group">
      <label>Todo Name</label>
      <input class="form-control" type="text" name="text" placeholder="Name">
    </div>
    <div class="form-group">
      <label>Todo Body</label>
      <textarea class="form-control" type="text" name="body" placeholder="Name"></textarea>
    </div>
    <button type="submit" >Submit </button>
  </form>

<div class="row-md-6">

  <ul>
    <% todos.forEach(function(todo){ %>
      <li class="list-group-item"><div class="my-0"><%= todo.text %> - <%= todo.body %></div>
        <span><a  href="/todo/edit/<%= todo._id %>" class="btn btn-info">Update</a>
        <a data-id="<%= todo._id %>" href="#" class="delete-todo btn btn-danger">Delete</a></span>

      </li>


  <%  }) %>
</ul>
</div>

<div class="row-md-6">
</div>
</div>


<% include ../views/partials/footer %>
